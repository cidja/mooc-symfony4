{% extends "base.html.twig" %}


{% block body %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %} <!--Pour utiliser le template form bootstrap-->


    <h1>{% if editMode %}
        Modification d'un article 
        {% else %}
        Cr√©ation d'un article
        {% endif %}
    </h1>
    
    {{ form_start(formArticle) }}
    
    {{ form_row(formArticle.title, {'attr' : {"placeholder" : " titre de l'article"}}) }} <!--Va rajouter un attribut placeholder a title-->
    {{ form_row(formArticle.content, {'attr' : {"placeholder" : "contenu de l'article"}}) }}
    {{ form_row(formArticle.image, {'attr': {"placeholder" : "rentrez l'url de l'image"}}) }}

    <button type="submit" class="btn btn-success">
        {% if editMode %}
            Enregister les modifications
        {% else %}
            Ajouter l'article</button> 
        {% endif %}
    {{ form_end(formArticle) }}
    
{% endblock body %}